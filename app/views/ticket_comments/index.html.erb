<h1>Listing ticket_comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Ticket</th>
      <th>Tickets</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ticket_comments.each do |ticket_comment| %>
      <tr>
        <td><%= ticket_comment.comment %></td>
        <td><%= ticket_comment.ticket_id %></td>
        <td><%= ticket_comment.tickets %></td>
        <td><%= link_to 'Show', ticket_comment %></td>
        <td><%= link_to 'Edit', edit_ticket_comment_path(ticket_comment) %></td>
        <td><%= link_to 'Destroy', ticket_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket comment', new_ticket_comment_path %>
